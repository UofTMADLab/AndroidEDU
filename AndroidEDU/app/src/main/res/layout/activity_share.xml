<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="madlab.androidedu.ShareActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Wasted: "
        android:id="@+id/wasted_time"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:000"
        android:id="@+id/timer_share"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/wasted_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCongrats"
        android:paddingTop="10dp"
        android:src="@drawable/wastedtime"
        android:layout_below="@+id/fourth_possibility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You could have:"
        android:id="@+id/title"
        android:layout_below="@+id/timer_share"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Run a mile: "
        android:id="@+id/first_possibility"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bought Groceries: "
        android:id="@+id/second_possibility"
        android:layout_below="@+id/first_possibility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Read The Great Gatsby: "
        android:id="@+id/third_possibility"
        android:layout_below="@+id/second_possibility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Learn basic coding: "
        android:id="@+id/fourth_possibility"
        android:layout_below="@+id/third_possibility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 times or"
        android:id="@+id/first_answer"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/first_possibility"
        android:layout_toEndOf="@+id/first_possibility" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 times or"
        android:id="@+id/second_answer"
        android:layout_below="@+id/first_possibility"
        android:layout_toRightOf="@+id/second_possibility"
        android:layout_toEndOf="@+id/second_possibility" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 times or"
        android:id="@+id/third_answer"
        android:layout_below="@+id/second_answer"
        android:layout_toRightOf="@+id/third_possibility"
        android:layout_toEndOf="@+id/third_possibility" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 times"
        android:id="@+id/fourth_answer"
        android:layout_below="@+id/third_answer"
        android:layout_toRightOf="@+id/fourth_possibility"
        android:layout_toEndOf="@+id/fourth_possibility" />
</RelativeLayout>
